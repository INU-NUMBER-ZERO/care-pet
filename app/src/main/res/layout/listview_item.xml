<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_back1"
        android:elevation="4dp"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/profile_back2"
                android:layout_weight="3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/profile_back3"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:padding="12dp"
                android:src="@drawable/doctor"
                android:scaleType="fitCenter"
                android:background="@drawable/profile_back" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="4dp"
                        android:gravity="bottom"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="OO전문 "
                        android:fontFamily="@font/nanumsquareneootf"
                        android:id="@+id/major"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingBottom="4dp"
                        android:gravity="bottom"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_100"
                        android:layout_weight="2"
                        android:text="홍길동"
                        android:fontFamily="@font/nanumsquareneootf"
                        android:id="@+id/name"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_baseline_call_24"
                        android:padding="8dp"
                        android:layout_margin="12dp"
                        android:id="@+id/call"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:text="찰떡콩떡 동물병원"
                    android:fontFamily="@font/nanumsquareneootf"
                    android:singleLine="true"
                    android:id="@+id/hospital"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>